<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyJobDiary.View.ShiftFormContentPage" 
             BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout Spacing="0">
            <Label Text="Začiatok smeny" TextColor="LightBlue" Margin="5"/>
            <DatePicker Date="{Binding DateFrom}" HorizontalOptions="Fill" Margin="5" 
                        TextColor="LightBlue" BackgroundColor="Gray"/>
            <TimePicker Time="{Binding TimeFrom}" HorizontalOptions="Fill" Margin="5" 
                        TextColor="LightBlue" BackgroundColor="Gray"/>
            <Label Text="Koniec smeny" TextColor="LightBlue" Margin="5"/>
            <DatePicker Date="{Binding DateTo}" HorizontalOptions="Fill" Margin="5"
                        TextColor="LightBlue" BackgroundColor="Gray"/>
            <TimePicker Time="{Binding TimeTo}" HorizontalOptions="Fill" Margin="5"
                        TextColor="LightBlue" BackgroundColor="Gray"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>